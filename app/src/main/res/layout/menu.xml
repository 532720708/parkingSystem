<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/default_bg"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="#FFFFFF"
        android:layout_marginTop="70dip"
        android:layout_marginBottom="30dip">

        <Button
            android:layout_marginTop="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:id="@+id/guide"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#224C6D"
            android:text="寻找附近停车场"
            android:textSize="21sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:id="@+id/distribution"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#224D7D"
            android:text="    停车场车位分布信息    "
            android:textSize="21sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/sign"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#2E6894"
            android:text="停车位标记"
            android:textColor="#FFFFFF"
            android:textSize="21sp"/>

        <Button
            android:id="@+id/record"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#377EB3"
            android:text="停车缴费查询"
            android:textColor="#FFFFFF"
            android:textSize="21sp"/>

        <Button
            android:id="@+id/find"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#4C92C8"
            android:text="找车请求"
            android:textColor="#FFFFFF"
            android:textSize="21sp"/>

        <Button
            android:id="@+id/cancel_find"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#63A0CF"
            android:text="停止找车"
            android:textColor="#FFFFFF"
            android:textSize="21sp"/>


        <Button
            android:id="@+id/zhuxiao"
            android:layout_marginRight="30dip"
            android:layout_marginLeft="30dip"
            android:layout_marginBottom="30dip"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="#86B6DA"
            android:text="注销"
            android:textColor="#FFFFFF"
            android:textSize="21sp"/>


    </LinearLayout>

</LinearLayout>